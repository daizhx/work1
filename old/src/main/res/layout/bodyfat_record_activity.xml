<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
 	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	xmlns:android="http://schemas.android.com/apk/res/android"> 
  	
  	<include layout="@layout/title" android:layout_weight="10"/>
  	
  	<RelativeLayout 
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:orientation="vertical"
  		android:layout_weight="8">
  		<TextView 
  			android:id="@+id/bodyfat_current_date"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="5"
  			android:layout_marginLeft="5dip"
  			android:layout_marginTop="5dip"
		  	android:textColor="#007cc8"
		  	android:textSize="20sp"/>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_centerInParent="true">	
		<View 
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="5"/>
  		<RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"  						
  			android:layout_weight="3">
  			<ImageView 
  				android:id="@+id/record_indicator_background"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:src="@drawable/indicator_background"/>
  			<ImageView 
  				android:id="@+id/record_indicator"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:src="@drawable/indicator"/>
  			<LinearLayout 
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:orientation="vertical"
  				android:layout_centerInParent="true"
  				android:gravity="center_horizontal">
  				<TextView 
  					android:id="@+id/bodyfat_record_data"
  					android:layout_width="wrap_content"
  					android:layout_height="wrap_content"
  					android:text="0.0"
  					android:textSize="22sp"
  					android:textColor="@color/gray"/>
  				<TextView 
  					android:id="@+id/bodyfat_record_state"
  					android:layout_width="wrap_content"
  					android:layout_height="wrap_content"
  					android:text="@string/no_data"
  					android:textSize="15sp"
  					android:textColor="#007cc8"/>
  			</LinearLayout>	
  		</RelativeLayout>
  		<TextView 
  			android:id="@+id/bodyfat_record_type"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:textColor="@color/gray"
  			android:textSize="18sp"
  			android:gravity="center_horizontal|top"
  			android:layout_weight="4"/>
  		</LinearLayout>
  		
  		<TextView
  			android:layout_width="wrap_content"	
  			android:layout_height="wrap_content"
  			android:text="@string/unit_kg"
  			android:layout_marginLeft="10dip"
  			android:layout_alignParentBottom="true"
  			android:textColor="@color/gray"
  			android:textSize="18sp"/>
  		<TextView 
  			android:id="@+id/bodyfat_record_year_mode"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="@string/year"
  			android:textColor="@color/gray"
  			android:layout_alignParentRight="true"
  			android:layout_alignParentBottom="true"
  			android:layout_marginRight="15dip"
  			android:textSize="20dip"/>
  		<View 
  			android:id="@+id/bodyfat_record_split_line"
  			android:layout_width="2dip"
  			android:layout_height="20dip"
  			android:background="#007cc8"
  			android:layout_marginLeft="10dip"
  			android:layout_marginRight="10dip"
  			android:layout_alignParentBottom="true"
  			android:layout_toLeftOf="@id/bodyfat_record_year_mode"/>
  		<TextView 
  			android:id="@+id/bodyfat_record_month_mode"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="@string/month"
  			android:textColor="#007cc8"
  			android:textSize="20dip"
  			android:layout_alignParentBottom="true"
  			android:layout_toLeftOf="@id/bodyfat_record_split_line"/>
  	</RelativeLayout>
  	
  	<com.jiuzhansoft.ehealthtec.subActivity.bodyfat.BodyfatRecordScrollView
	  		android:id="@+id/bodyfat_scroll"
	  		android:layout_width="fill_parent"
	  		android:layout_height="fill_parent"
	  		android:layout_weight="7"
	  		android:background="@drawable/bodyfat_record_background"
	  		android:layout_marginLeft="15dip"
	  		android:layout_marginRight="15dip"/>	
  	<RelativeLayout 
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:layout_weight="8">
  		<LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:background="@drawable/bodyfat_date_select"
  			android:layout_centerInParent="true"
  			android:layout_marginLeft="30dip"
  			android:layout_marginRight="30dip"
  			android:orientation="horizontal">
  			<ImageButton
  				android:id="@+id/bodyfat_record_date_minus"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:src="@drawable/arraw_left"
  				android:background="@color/transparent"
  				android:layout_gravity="center"
  				android:layout_weight="6"/>
  			<TextView 
  				android:id="@+id/bodyfat_record_date"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:gravity="center"
  				android:layout_gravity="center"
  				android:textSize="20sp"
  				android:textColor="#007cc8"
  				android:layout_weight="2"/>	  			
  			<ImageButton
  				android:id="@+id/bodyfat_record_date_plus"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:src="@drawable/arraw_right"
  				android:background="@color/transparent"
  				android:layout_gravity="center"
  				android:layout_weight="6"/>
  		</LinearLayout>
  	</RelativeLayout>
</LinearLayout>
