<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    >
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="5dp"/>
    	<LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal"
    			android:background="@drawable/corner_view">
    			<TextView     	 	
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"
    				android:text="@string/analysis_mode"/>
    			<TextView  
    				android:id="@+id/analysis_mode"   		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"/>	
    		</LinearLayout>
    		<View 
    		android:layout_width="fill_parent"
    		android:layout_height="5dp"/>
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal"
    			android:background="@drawable/corner_view">
    			<TextView     				
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"
    				android:text="@string/analysis_status"/>
    			<TextView    
    				android:id="@+id/analysis_status" 			
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"/>
    		</LinearLayout>
    	</LinearLayout>
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="5dp"/>
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:background="@drawable/corner_view">
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="18.0sp"
    			android:text="@string/cause_of_formation"/>
    		<TextView 
    			android:id="@+id/cause_of_formation"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="15.0sp"/>	
    	</LinearLayout>
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="5dp"/>
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:background="@drawable/corner_view">
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="18.0sp"
    			android:text="@string/recommendations_for_improvement"/>
    		<TextView 
    			android:id="@+id/recommendations_for_improvement"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="15.0sp"/>	
    	</LinearLayout>
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="5dp"/>
    </LinearLayout>        
</LinearLayout>

