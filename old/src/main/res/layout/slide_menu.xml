<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<RelativeLayout android:id="@+id/user_title" 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="20dp"
    	android:paddingBottom="20dp">
	    
	    <ImageView android:id="@+id/user_photo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:src="@drawable/user_head_demo"/>
	    <TextView android:id="@+id/user_name"
	        android:layout_below="@+id/user_photo"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/user_name"
	        />
	</RelativeLayout>
	<ListView android:id="@+id/list1"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/user_title"
    	 />
	
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
        android:paddingRight="10dp"
	    android:background="#687679"
	    android:text="@string/my_products"
	    android:textAppearance="@android:style/TextAppearance"
	    android:layout_below="@+id/list1"
	    android:id="@id/text"
	    />
	
	<ListView android:id="@+id/list2"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:footerDividersEnabled="true"
    	android:layout_below="@+id/text"
    	 />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/log_out" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v null"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
