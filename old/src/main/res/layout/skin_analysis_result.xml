<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    >
    <ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
    	<LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
    		
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal"
    			android:layout_marginTop="10.0dip">
    			<TextView     			
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"
    				android:id="@+id/skan_content_text"/>
    			<TextView    
    				android:id="@+id/skan_content" 			
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"/>
    		</LinearLayout>
    		<!-- divide line-->
    		<View android:layout_width="match_parent"
    		    android:layout_height="1dp"
    		    android:layout_marginTop="10dp"
    		    android:background="@color/gray"
    		    />
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal"
    			android:layout_marginTop="10.0dip">
    			<TextView     		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"
    				android:id="@+id/skan_state_text"/>
    			<TextView  
    				android:id="@+id/skan_state"   		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"/>	
    		</LinearLayout> 
    		<!-- divide line-->
    		<View android:layout_width="match_parent"
    		    android:layout_height="1dp"
    		    android:layout_marginTop="10dp"
    		    android:background="@color/gray"
    		    />
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="vertical"
    			android:layout_marginTop="10.0dip">
    			<TextView     		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"
    				android:text="@string/cause_of_formation"/>
    			<TextView  
    				android:id="@+id/skan_reason"   		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"/>	
    		</LinearLayout>
    		<!-- divide line-->
    		<View android:layout_width="match_parent"
    		    android:layout_height="1dp"
    		    android:layout_marginTop="10dp"
    		    android:background="@color/gray"
    		    />           	
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="vertical"
    			android:layout_marginTop="10.0dip">
    			<TextView     		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"
    				android:text="@string/recommendations_for_improvement"/>
    			<TextView  
    				android:id="@+id/skan_suggest"   		
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="18.0sp"/>	
    		</LinearLayout>
    		
    		<!-- divide line-->
    		<View android:layout_width="match_parent"
    		    android:layout_height="1dp"
    		    android:layout_marginTop="10dp"
    		    android:background="@color/gray"
    		    />
    		
    		<Button android:layout_width="180dp"
    	    android:layout_height="40dp"
    	    android:layout_gravity="center_horizontal"
    	    android:layout_marginTop="10dp"
    	    android:id="@+id/nextbtn"
    	    android:background="@drawable/blue_bg"
    	    android:text="@string/addto_report"/>
    	</LinearLayout>
    	
    	
    	
    </ScrollView> 
</LinearLayout>