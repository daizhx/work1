<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hengxuan.eht.lens.GuidActivity$PlaceholderFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_guid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:id="@+id/title" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="@string/tell_open_len"
        android:layout_marginTop="8dp"
        android:id="@+id/text1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:id="@+id/text2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_operate_lens"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_get_lens"
            android:textStyle="bold|italic"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:clickable="true"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="10dp"
        android:text="@string/scan_lens_hint"
        android:id="@+id/text3"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/lens_not_open"
        android:id="@+id/text4"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_centerHorizontal="true"
        android:text="@string/check"
        android:id="@+id/check_btn"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@id/progress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_btn"
        android:layout_marginTop="10dp"
        android:text="@string/open_wifi_setting"
        android:id="@+id/text5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text5"
        android:layout_centerHorizontal="true"
        android:text="@string/go_wifi_setting"
        android:id="@+id/wifi_setting"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_setting"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:text="@string/go_home"
        android:id="@+id/go_home_btn"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/go_home_btn"
        android:layout_alignBottom="@id/go_home_btn"
        android:layout_alignParentLeft="true"
        android:text="@string/no_steps"/>
</RelativeLayout>
